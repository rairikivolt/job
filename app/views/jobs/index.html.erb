<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table class="table table-hover table-bordered table-condensed table-striped">
  <thead>
    <tr>
      <th>Job</th>
      <th>Received order</th>
      <th>Gave order</th>
      <th>Shipped</th>
      <th>Delivered</th>
      <th>Account Receivable</th>
      <th>Account Payable</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.job %></td>
        <td><%= job.received_order %></td>
        <td><%= job.gave_order %></td>
        <td><%= job.shipped %></td>
        <td><%= job.delivered %></td>
        <td><%= job.ar %></td>
        <td><%= job.ap %></td>
        <td><%= job.completed? ? raw('&#x2713') : "" %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

